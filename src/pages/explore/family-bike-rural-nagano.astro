---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GenericSlider from '../../components/GenericSlider.astro';
import CustomerReviewsSlider from '../../components/CustomerReviewsSlider.astro';
import LandingPageHeroCards from '../../components/LandingPages/LandingPageHeroCards.astro';
import LandingPastTripsCardsContainer from '../../components/LandingPages/LandingPastTripsCardsContainer.astro';
import LandingPageWhyOneLifeJapan from '../../components/LandingPages/LandingPageWhyOneLifeJapan.astro';
import LandingPageRouteTogglerCards from '../../components/LandingPages/LandingPageRouteTogglerCards.astro';
import FamilyLandingPageFaq from '../../components/LandingPages/FamilyNagano/FamilyLandingPageFaq.astro';
import FamilyNaganoLandingSampleDays from '../../components/LandingPages/FamilyNagano/FamilyNaganoLandingSampleDays.astro';
import { fetchLandingPage } from '../../utils/fetchLandingPage';
const landingPageData = await fetchLandingPage(1); // ID 1 for Family Bike Nagano

import { baseHost } from '../../utils/utilities.ts';
import '../../styles/global.scss';
const devOnly = false;
const ctaText = 'Start Planning Your Family Adventure ››';
const sliderText = "But there's a whole different side of Japan waiting  -  if you're willing to go a bit further.";
const title = 'Discover Rural Japan Beyond the Golden Route - One Life Japan';
const description =
    'Already planning the Golden Route? Discover a deeper side of Japan with flexible countryside trips - bike, walk, or simply wander through quiet villages and hidden landscapes. Explore rural life with One Life Japan.';
---

<BaseLayout title={title} description={description} page="about" devOnly={devOnly}>
    <div class="custom-container simple-page-body">
        <div class="centered attention-catcher">
            <h1>{landingPageData.title}</h1>
            {
                landingPageData.heroSubtitle
                    ?.split('\n')
                    .filter((line: string) => line.trim() !== '') // optional: ignore empty lines
                    .map((line: string) => <h2>{line}</h2>)
            }
        </div>

        <LandingPageHeroCards landingPageData={landingPageData} />

        <div class="cta-container">
            <p class="small-note">
                Ride, explore, relax. Take a countryside break from the busy cities and discover a hidden side of Japan.
                Flexible support options to fit your family's style.
            </p>
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>

        <hr />

        <section class="landing-routes">
            <h2>Trip Highlights</h2>
            <div class="frame">
                <GenericSlider sliderImageId={77} height={250} />
            </div>
            <ul class="checklist" style="margin-top: 20px; font-size:1.1em;">
                {
                    landingPageData.tripHighlights
                        ?.split('\n')
                        .filter((line: string) => line.trim() !== '') // optional: ignore empty lines
                        .map((line: string) => <li set:html={line}} />)
                }
            </ul>

            <p>
                Want to dive deeper into the experience? Explore a full day-by-day sample itinerary, with stories,
                activities, and glimpses into what rural Japan feels like when you slow down and ride through it.
                <a href="/itinerary/1/family-japan-adventure/" target="_blank" rel="noopener noreferrer"
                    >View a more Detailed Itinerary ››</a
                >
            </p>
        </section>
        <hr />

        <section class="landing-faqs">
            <h2>Sample 4-Day Itinerary</h2>
            <p>This is a sample of what four days might looks like.  We have found that four days is a sweet spot allowing ample time to slow down and relax, at the same time leaving time for the rest of Japan. The number of days is flexible to fit your scheduele.</p>
            <FamilyNaganoLandingSampleDays />

        </section>

        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>

        <hr />

        <section class="landing-testimonials">
            <h2>Why Families Love One Life Japan's Rural Bike Trips</h2>
            <div class="frame">
                <GenericSlider sliderImageId={73} height={250} />
            </div>
            <p>Instead of sightseeing for kids or despite kids, our countryside trips make the whole journey part of the fun. Riding bikes, making soba noodles, soaking in hot springs, exploring small towns — everyone’s engaged naturally. No boredom, no bargaining, no “just one more temple.” Just real experiences shared together, at your family’s pace.</p>
        </section>

        <section class="landing-testimonials">
            <h2>What Past Guests Say</h2>
          
            <div class="testimonial-faces">
              <img id="face1" src={`${baseHost}/assets/img/2024/media/photos/1356/p1050122_1jpg_458565109_o_large.jpg`} alt="Family enjoying Japan" class="testimonial-face-img" />
              <img id="face2"src={`${baseHost}/assets/img/2024/media/photos/1356/p1050122_1jpg_458565109_o_large.jpg`} alt="Family enjoying Japan" class="testimonial-face-img" />
              <img id="face3" src={`${baseHost}/assets/img/2024/media/photos/1356/p1050122_1jpg_458565109_o_large.jpg`} alt="Family enjoying Japan" class="testimonial-face-img" />
              <img id="face4" src={`${baseHost}/assets/img/2024/media/photos/1356/p1050122_1jpg_458565109_o_large.jpg`} alt="Family enjoying Japan" class="testimonial-face-img" />
            </div>
          
            <CustomerReviewsSlider show={3} />
          </section>
          


        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>

            <hr />

            <section class="landing-faqs">
                <h2>Who It’s For</h2>
                <p>
                    Families with kids aged 8+, groups of friends, or anyone seeking an active but relaxed countryside
                    adventure.
                </p>
                <p>
                    Basic biking ability recommended, but support available for varying fitness levels. E-bike upgrades
                    possible.
                </p>
            </section>

            <div class="cta-container">
                <a href="/contact" class="cta-button">{ctaText}</a>
            </div>

            <hr />

            <section class="landing-faqs">
                <h2>How It Works</h2>
                <p>
                    One Life Japan provides the bikes, route planning, luggage transfers, and cultural activity
                    arrangements. You explore at your pace. Activities like soba making or snow monkey visits are
                    optional and coordinated with trusted local partners.
                </p>
                <p class="small-note">*This is not a package tour. Each trip is custom-tailored to your group.</p>
            </section>

            <div class="cta-container">
                <a href="/contact" class="cta-button">{ctaText}</a>
            </div>

            <hr />

            <section class="landing-faqs">
                <h2>Trip Pricing Estimate</h2>
                <p>Estimated Cost: ¥150,000 – ¥190,000 per person (based on group size and support options).</p>
                <p>
                    Includes: Bikes, accommodations, breakfasts and dinners, basic luggage support, and cultural
                    activities listed.
                </p>
                <p>Excludes: Personal expenses, lunches, transport to/from start point, and travel insurance.</p>
                <p class="small-note">
                    *Exact quote provided after inquiry based on group size, support level, and lodging preferences.
                </p>
            </section>

            <div class="cta-container">
                <a href="/contact" class="cta-button">{ctaText}</a>
            </div>

            <hr />

            <section class="landing-faqs">
                <h2>Why Travel with One Life Japan?</h2>
                <LandingPageWhyOneLifeJapan />
            </section>

            <hr />

            <section class="past-trips">
                <h2>A Few Memorable Journeys</h2>
                <LandingPastTripsCardsContainer />
            </section>

            <hr />

            <section class="end-of-page">
                <h2>See You Soon...</h2>
                <div class="centered attention-catcher">
                    <img
                        src={`${baseHost}/assets/img/2024/media/photos/2067/fuji-from-akadake_298038257_o_large.jpg`}
                        alt="Family trip in rural Japan"
                        class="circle-img circle-img-2"
                        style="object-position: center 100%;"
                    />
                </div>
                <div class="cta-container">
                    <a href="/contact" class="cta-button">{ctaText}</a>
                </div>
            </section>
        </div>

        <style lang="scss">
            @use '../../styles/global' as *;
            section p {

                @include respond-to(small) {
                    margin-left:5px;
                }
            }
            section ul.checklist li {
                margin-top: 10px;
                @include respond-to(small) {
                    margin-left:5px;
                }
            }
            hr {
                margin: 50px 0;
                width: 100%;
            }
            .small-note {
                font-size: 1em;
                color: #777;
                margin-top: 10px;
                margin-bottom: 15px;
                text-align: left;
            }

            .attention-catcher {
                padding-top: 20px;
                padding-bottom: 30px;
                overflow: hidden;
                position: relative;
            }
            .attention-catcher h2,
            h4 {
                opacity: 0;
                animation: fadeIn 4s forwards;
                animation-timing-function: ease-out;
                position: relative;
            }
            .attention-catcher h1 {
                font-size: 2.3em;
                font-weight: 700;
                margin: 0; /* Prevent margin */
            }
            section h2 {
                padding-top: 20px !important;
                padding-bottom: 10px !important;
                font-size: 2.7em;
                text-align: center;
            }
            .attention-catcher h2 {
                font-size: 1.5em;
                margin: 10px 0 0; /* Add a bit of space between h1 and h2 */
            }
            // .attention-catcher h2 {
            //     font-size: 1.7em;
            // }
            // .attention-catcher h2 span {
            //     font-size: 1em;
            // }
            @keyframes fadeIn {
                0% {
                    opacity: 0;
                }
                100% {
                    opacity: 1;
                }
            }

            @include respond-to(xxlarge) {
            }

            @include respond-to(xlarge) {
            }

            @include respond-to(large) {
                .attention-catcher {
                    padding-top: 0px;
                    padding-bottom: 20px;
                }
            }

            @include respond-to(medium) {
                .btn-container {
                    justify-content: center !important; /* Center the button */
                    margin-top: 5px; /* Add some space above the button */
                }

                .container .row {
                    flex-direction: column; /* Stack the elements vertically */
                    align-items: center; /* Center align the children */
                }

                .container .col-md-3 {
                    width: 100%; /* Full width on smaller screens */
                    display: flex;
                    justify-content: center;
                    margin-bottom: 1em;
                }

                h1 {
                    text-align: center;
                }
            }
            .centered {
                text-align: center;
            }

            /* Landing Page Container */
            .landing-container {
                display: flex;
                justify-content: center;
                align-items: flex-start; /* Align items to the top */
                flex-direction: column;
                padding: 20px;
                width: 100%;
                max-width: 1200px;
                margin: 0 auto; /* Center the container horizontally */
            }
            .landing-routes {
                width: 100%;
                align-items: center;
            }
            /* Custom Container for Simple Page Body */
            .custom-container {
                width: 100%;
                margin-top: 20px;
            }

            :global(.cta-container) {
                width: 100%;
                text-align: center;
                padding: 20px;
                margin-top: 20px;
            }
            /* CTA Button */
            :global(.cta-button) {
                display: inline-block;
                padding: 1.5rem 1.5rem;
                background-color: var(--bs-link-color);
                color: white !important;
                font-weight: 600;
                font-size: 1.3em;
                border: none;
                border-radius: 8px;
                text-decoration: none;
                text-align: center;
                transition: background 0.2s ease;
                margin: auto;
                &:hover {
                    background-color: var(--bs-primary);
                }
            }

            /* Responsive Layout */
            @media (max-width: 1200px) {
                .landing-page-cards {
                    grid-template-columns: repeat(2, 1fr); /* 2 columns on medium screens */
                    gap: 20px;
                }
            }

            @media (max-width: 768px) {
                .landing-page-cards {
                    grid-template-columns: 1fr; /* 1 column on smaller screens */
                    gap: 15px;
                }
            }
            .circle-img {
                width: 280px;
                height: 280px;
                object-fit: cover;
                object-position: center 0%; // <-- move image down to center your face
                border-radius: 50%;
                margin-bottom: 1rem;
                border: 3px solid #ccc;
            }
            .circle-img-2 {
                //object-position: left center 100%; // <-- move image down to center your face
                //object-position: right 50%;
                border-radius: 50%;
                margin-bottom: 1rem;
                //    border: 3px solid red;
            }
        </style>

<style lang="scss">
    @use '../../styles/global' as *;
    .testimonial-faces {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  margin-bottom: 2rem;
  width: 100%;
}

.testimonial-face-img {
  width: 100%; /* Fill the grid cell */
  max-width: 160px; /* Optional: control maximum size */
  aspect-ratio: 1 / 1;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--bs-primary-light);
  justify-self: center; /* Center the image inside the grid cell */
}

@media (max-width: 900px) {
  .testimonial-faces {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }

  #face4 {
    display: none; /* Hide the fourth image */
  }
}

@media (max-width: 500px) {
  .testimonial-faces {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }

  #face3 {
    display: none; /* Also hide the third face now */
  }
}


            </style>
    </div>
</BaseLayout>
