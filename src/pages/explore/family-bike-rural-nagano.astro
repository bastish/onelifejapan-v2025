---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GenericSlider from '../../components/GenericSlider.astro';
import CustomerReviewsSlider from '../../components/CustomerReviewsSlider.astro';
import LandingPageHeroCards from '../../components/LandingPages/LandingPageHeroCards.astro';
import LandingPastTripsCardsContainer from '../../components/LandingPages/LandingPastTripsCardsContainer.astro';
import FamilyLandingPageWhyOneLifeJapan from '../../components/LandingPages/FamilyNagano/FamilyLandingPageWhyOneLifeJapan.astro';
import LandingPageRouteTogglerCards from '../../components/LandingPages/LandingPageRouteTogglerCards.astro';
import FamilyLandingPageFaq from '../../components/LandingPages/FamilyNagano/FamilyLandingPageFaq.astro';
import FamilyLandingPagePricing from '../../components/LandingPages/FamilyNagano/FamilyLandingPagePricing.astro';
import FamilyNaganoLandingSampleDays from '../../components/LandingPages/FamilyNagano/FamilyNaganoLandingSampleDays.astro';
import { fetchLandingPage } from '../../utils/fetchLandingPage';
const landingPageData = await fetchLandingPage(1); // ID 1 for Family Bike Nagano
import LandingPageSocialProofFaces from '../../components/LandingPages/LandingPageSocialProofFaces.astro';
import FamilyLandingPageSuammryModal from '../../components/LandingPages/FamilyNagano/FamilyLandingPageSuammryModal.astro';
import { baseHost } from '../../utils/utilities.ts';
import '../../styles/global.scss';
const devOnly = false;
const ctaText = 'Start Planning Your Family Adventure ››';
const sliderText = "But there's a whole different side of Japan waiting  -  if you're willing to go a bit further.";
const title = 'Discover Rural Japan Beyond the Golden Route - One Life Japan';
const description =
    'Already planning the Golden Route? Discover a deeper side of Japan with flexible countryside trips - bike, walk, or simply wander through quiet villages and hidden landscapes. Explore rural life with One Life Japan.';
---

<BaseLayout title={title} description={description} page="about" devOnly={devOnly}>
    <div class="custom-container simple-page-body">
        <div class="centered attention-catcher">
            <h1>{landingPageData.title}</h1>
            {
                landingPageData.heroSubtitle
                    ?.split('\n')
                    .filter((line: string) => line.trim() !== '') // optional: ignore empty lines
                    .map((line: string) => <h2>{line}</h2>)
            }
        </div>

        <LandingPageHeroCards landingPageData={landingPageData} />

        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>

        <hr />

        <section class="landing-routes">
            <h2>Highlights of Rural Japan</h2>
            <!-- <p class="centered sub-header">These are some of the <span class="emph">hands-on, family-friendly experiences</span> that past families remember most - and often say were their <span class="emph">favorite parts of the trip</span>. -->
            <!-- <p class="centered sub-header toggle" data-togglename="highlightsub">These are just some of the experiences past guests have loved. Some take planning, some are seasonal, and some — because they aren't typical tourist attractions — depend on the schedule and goodwill of our local community. When we plan your trip, we'll talk through what excites you most and explore what's possible.</p>
            <p class="centered sub-header toggle" data-togglename="highlightsub">Some of the seasonal and unique experiences past guests have loved. When we plan your trip, we'll talk through what excites you most and explore what's possible.</p> -->
            <p class="centered sub-header toggle" data-togglename="highlightsub">
                Some of the <span class="emph">seasonal and unique experiences</span> past guests have loved. Since these <span class="emph">aren't all typical tourist attractions</span>, a few depend on the daily schedule and <span class="emph">goodwill of our local community</span>. While it's impossible to fit them all in, when we plan your trip, we'll talk through what excites you most and <span class="emph">explore what's possible.</span>
            </p>
            
            <div class="frame">
                <GenericSlider sliderImageId={77} height={210} />
            </div>
            <ul class="checklist" style="margin-top: 20px; font-size:1.1em;">
                {
                    landingPageData.tripHighlights
                        ?.split('\n')
                        .filter((line: string) => line.trim() !== '') // optional: ignore empty lines
                        .map((line: string) => <li set:html={line}} />)
                }
            </ul>

        </section>

        <hr />

        <section class="landing-faqs">
            <h2>A Flexible Four-Day Itinerary</h2>
            <p class="centered sub-header">*A sample shaped by the <span class="emph">moments families remember most</span>. <br>No two trips are exaclty the same.</p>
            <div style="margin-bottom: 20px;">
                <FamilyNaganoLandingSampleDays landingPageData={landingPageData} />
            </div>
        <div class="centered-section">
            <p class="footnote">* This itinerary is a <span class="emph">flexible example</span> of a typical trip - <span class="emph">not a pre-set package</span>. Each journey is shaped by the season, your family's pace, and <span class="emph">what's possible in the moment</span>. We're always happy to plan longer trips, but we encourage <span class="emph"> at least four days</span> - in our experience, that's just <span class="emph">enough time to slow down, connect</span>, and still fit comfortably into your overall Japan itinerary.</p>

            <p class=" sub-header"><a href="/detailed-itinerary">See a more detailed day-by-day breakdown ››</a></p>
        </div>
        </section>

        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>

        <hr />

        <section class="landing-testimonials">
            <h2>Why Families Love One Life Japan's Rural Bike Trips</h2>


            <LandingPageSocialProofFaces slug={landingPageData.slug}/>
            <p class="centered sub-header">The <span class="emph">best memories</span> people leave Japan with aren’t just from seeing the same sights together—they’re from <span class="emph">what they did together</span>. One Life Japan’s rural trips are full of shared experiences - <span class="emph">trying new things</span>,<span class="emph"> meeting people</span>, and <span class="emph">sharing little surprises</span> along the way. It’s the kind of connection that stays with people long after the trip - something <span class="emph">real, shared, and unforgettable</span>.</p>

            </p>
            <CustomerReviewsSlider show={3} />
        </section>
        


        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>
        
        <hr />

        <section class="landing-faqs">
            <h2>FAQ</h2>
            <FamilyLandingPageFaq />       
        </section>

        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>

        <hr />

        <section class="family-pricing-section">
            <h2>Trip Pricing Estimate</h2> 
            <p class="centered sub-header">
                Every trip is <span class="emph">
                    customized based on your family's
                    interests</span>, the season, and what's happening locally. The prices below <span class="emph">aren't fixed packages</span>. They're very realistic estimates based
                on our trips <span class="emph">similar the example above</span> that include lodging, meals, cultural activities, and full guided support.
            </p>
            <FamilyLandingPagePricing />
            <div class="centered-section">
                    <p class="footnote">
                        We aim to keep your costs <span class="emph">within this range</span>. Actual prices may vary slightly depending on your final
                        itinerary - but once we begin planning, we’ll provide a detailed quote - <span class="emph">no surprises</span>, and always with your
                        needs in mind.
                    </p>
                    <p class="footnote">Want a <span class="emph">longer trip or different support</span> level? We’ll work with you to create something that fits.</p>
            </div>
        </section>

        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>

        <hr />

        <section class="landing-faqs">
            <h2>Why Travel with One Life Japan?</h2>
            <FamilyLandingPageWhyOneLifeJapan />
        </section>

        <div class="cta-container">
            <a href="/contact" class="cta-button">{ctaText}</a>
        </div>
        <div class="centered" style="margin-bottom: 20px;">
            <FamilyLandingPageSuammryModal />
        </div>
    
            
    </div>

        <style lang="scss">
            @use '../../styles/global' as *;
            section {
                @include respond-to(small) {
                    //border: 1px solid blue;
                }
            }
            section p {

                @include respond-to(small) {
                    margin-left:5px;
                }
            }
            section ul.checklist li {
                margin-top: 10px;
                @include respond-to(small) {
                    margin-left:5px;
                }
            }
            .sub-header {
                max-width: 1000px;
                margin: 0 auto;
                margin-bottom: 20px;
            }
            .centered-section {
                max-width: 800px;
                margin: 0 auto;
                text-align: left;
            }
            hr {
                margin: 50px 0;
                width: 100%;
                @include respond-to(small) {
                    margin: 20px 0;
                }
            }
            .footnote {
                font-size: 1.1em;
                color: #777;
                margin-top: 10px;
                margin-bottom: 15px;
                text-align: left;
            //    border: 1px solid red;
            }

            .attention-catcher {
                padding-top: 20px;
                padding-bottom: 30px;
                overflow: hidden;
                position: relative;
            }
            .attention-catcher h2,
            h4 {
                opacity: 0;
                animation: fadeIn 4s forwards;
                animation-timing-function: ease-out;
                position: relative;
            }
            .attention-catcher h1 {
                font-size: 2.3em;
                font-weight: 700;
                margin: 0; /* Prevent margin */
            }
            section h2 {
                padding-top: 20px !important;
                padding-bottom: 10px !important;
                font-size: 2.7em;
                text-align: center;
            }
            .attention-catcher h2 {
                font-size: 1.5em;
                margin: 10px 0 0; /* Add a bit of space between h1 and h2 */
            }
            // .attention-catcher h2 {
            //     font-size: 1.7em;
            // }
            // .attention-catcher h2 span {
            //     font-size: 1em;
            // }
            @keyframes fadeIn {
                0% {
                    opacity: 0;
                }
                100% {
                    opacity: 1;
                }
            }

            @include respond-to(xxlarge) {
            }

            @include respond-to(xlarge) {
            }

            @include respond-to(large) {
                .attention-catcher {
                    padding-top: 0px;
                    padding-bottom: 20px;
                }
            }

            @include respond-to(medium) {
                .btn-container {
                    justify-content: center !important; /* Center the button */
                    margin-top: 5px; /* Add some space above the button */
                }

                .container .row {
                    flex-direction: column; /* Stack the elements vertically */
                    align-items: center; /* Center align the children */
                }

                .container .col-md-3 {
                    width: 100%; /* Full width on smaller screens */
                    display: flex;
                    justify-content: center;
                    margin-bottom: 1em;
                }

                h1 {
                    text-align: center;
                }
            }
            .centered {
                text-align: center;
            }

            /* Landing Page Container */
            .landing-container {
                display: flex;
                justify-content: center;
                align-items: flex-start; /* Align items to the top */
                flex-direction: column;
                padding: 20px;
                width: 100%;
                max-width: 1200px;
                margin: 0 auto; /* Center the container horizontally */
            }
            .landing-routes {
                width: 100%;
                align-items: center;
            }
            /* Custom Container for Simple Page Body */
            .custom-container {
                width: 100%;
                margin-top: 20px;
            }

            :global(.cta-container) {
                width: 100%;
                text-align: center;
                padding: 20px;
                margin-top: 20px;
            }
            /* CTA Button */
            :global(.cta-button) {
                display: inline-block;
                padding: 1.5rem 1.5rem;
                background-color: var(--bs-link-color);
                color: white !important;
                font-weight: 600;
                font-size: 1.3em;
                border: none;
                border-radius: 8px;
                text-decoration: none;
                text-align: center;
                transition: background 0.2s ease;
                margin: auto;
                &:hover {
                    background-color: var(--bs-primary);
                }
            }

            /* Responsive Layout */
            @media (max-width: 1200px) {
                .landing-page-cards {
                    grid-template-columns: repeat(2, 1fr); /* 2 columns on medium screens */
                    gap: 20px;
                }
            }

            @media (max-width: 768px) {
                .landing-page-cards {
                    grid-template-columns: 1fr; /* 1 column on smaller screens */
                    gap: 15px;
                }
            }
            .circle-img {
                width: 280px;
                height: 280px;
                object-fit: cover;
                object-position: center 0%; // <-- move image down to center your face
                border-radius: 50%;
                margin-bottom: 1rem;
                border: 3px solid #ccc;
            }
            .circle-img-2 {
                //object-position: left center 100%; // <-- move image down to center your face
                //object-position: right 50%;
                border-radius: 50%;
                margin-bottom: 1rem;
                //    border: 3px solid red;
            }

            .checklist {
                margin-top: 20px;
                font-size: 1.1em;
                list-style: none;
                padding: 10px!important;
                max-width: 95%;
                margin-left: auto;
                margin-right: auto;
                border: 2px solid var(--bs-primary-light);
                border-radius: 8px;
                background: rgba(189, 208, 159, 0.08); // or a themed light color
                @include respond-to(medium) {
                    // margin-left: 0px;
                    // margin-right: 0px;
                    padding: 5px!important;
                    max-width: 100%;
                }

            }

            .checklist li::before {
                margin-right: 0.5em;
                
            }

            @media (min-width: 768px) {
                .checklist {
                    columns: 2;
                    column-gap: 2rem;
                }
            }
//                 small: 480px,
//   medium: 768px,
//   large: 1024px
        </style>

<style lang="scss">
    @use '../../styles/global' as *;
    .testimonial-faces {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-bottom: 2rem;
  width: 100%;
}

.testimonial-face-img {
  width: 100%; /* Fill the grid cell */
  max-width: 160px; /* Optional: control maximum size */
  aspect-ratio: 1 / 1;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--bs-primary-light);
  justify-self: center; /* Center the image inside the grid cell */
}

@media (max-width: 900px) {
  .testimonial-faces {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }

  #face4 {
    display: none; /* Hide the fourth image */
  }
}

@media (max-width: 500px) {
  .testimonial-faces {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }

  #face3 {
    display: none; /* Also hide the third face now */
  }
}


            </style>
    </div>
</BaseLayout>
