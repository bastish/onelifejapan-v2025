---
// TopNav.astro

import NavUtilities from "./NavUtilities.astro";
import "../../styles/global.css";
import logo from "../../assets/olj_logo.png";



---

<nav class="navbar navbar-expand-lg navbar-light flex-column">
    <div class="container-fluid py-2">
        <div class="d-flex w-100 justify-content-between align-items-center">
            <!-- Logo / Brand -->
            <a class="navbar-brand ms-2" href="#">
                <img src={logo.src} alt="Logo" width="226" height="58" />
            </a>
            <NavUtilities />
            <!-- Mobile Toggler -->
            <div class="d-lg-none">
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarMain"
                    aria-controls="navbarMain"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
        <!-- Horizontal Rule for Desktop -->
        <div class="d-none d-lg-block mt-2 mb-0">
            <hr class="text-white w-100" />
        </div>
    </div>
    <!-- Main Navigation Links -->
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <!-- Earthquake Dropdown -->
                <li class="nav-item dropdown">
                    <a
                        class="nav-link dropdown-toggle"
                        href="#"
                        data-bs-toggle="dropdown"
                        role="button"
                        aria-expanded="false"
                    >
                        Adventures & Tours
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Japan Family Bike Adventure</a></li>
                        <li><a class="dropdown-item" href="#">Autumn Bike & HIke</a></li>
                        <li><a class="dropdown-item" href="#">Three Day Rural Immerison</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#">Custom Adventures</a></li>
                        <li><a class="dropdown-item" href="#">One Month Across Japan</a></li>
                        <li><a class="dropdown-item" href="#">10 Days Kanazawa & Noto</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#">Intensity</a></li>
                        <li><a class="dropdown-item" href="#">Photos</a></li>
                    </ul>
                </li>
                <!-- Other Nav Items -->
                <li class="nav-item"><a class="nav-link" href="#">Self-Guided</a></li>
                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Blog</a></li>
            </ul>
        </div>
    </div>
</nav>
<!-- End Navigation -->

<style>
    .navbar {
        /* background-color: var(--primary-color); */
        background-color: #fff;
    }
    .navbar .nav-link {
        color: var(--primary-color);
        font-weight: 500;
    }
    .navbar .nav-link:hover,
    .navbar .nav-link:focus {
        color: #e0e0e0 !important;
    }
    .dropdown-menu {
        background-color: #fff;
    }
    .dropdown-menu .dropdown-item {
        color: #333 !important;
    }
    /* Dummy Logo Styling */
    .navbar-brand svg {
        display: block;
    }
</style>