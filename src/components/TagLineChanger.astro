<span class="tagline" data-taglines={taglinesJson}>{taglines[0]}</span>

<script type="module">
    const taglineElement = document.querySelector('.tagline');
    const taglines = JSON.parse(taglineElement.getAttribute('data-taglines'));

    let currentTaglineIndex = 0;

    taglineElement.addEventListener('click', () => {
        currentTaglineIndex = (currentTaglineIndex + 1) % taglines.length;
        taglineElement.textContent = taglines[currentTaglineIndex];
    });
</script>

<style>
    .tagline {
        cursor: pointer;
        display: inline;
    }
</style>
