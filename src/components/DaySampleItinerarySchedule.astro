<style lang="scss">
    @import '../styles/global.scss';
    .testclass {
        border: 1px solid red;
    }
    .itinerary-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, sans-serif;
        width: 100%;
        padding: 1em;
        border: 1px solid red;
    }
    .itinerary-header {
        font-size: 1.8em;
        margin-bottom: 1em;
        color: var(--bs-primary-dark);
        text-align: center;
        font-weight: bold;
    }
