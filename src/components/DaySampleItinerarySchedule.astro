        width: 100%;
        margin-bottom: 2em;
        border: 2px solid var(--bs-primary);
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 1em;
        background-color: #f9f9f9;
        border: 1px solid pink;
    } */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 0em 0;
    }
    .table th,
    .table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    .table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }
    .time-slot {
        display: grid;
        grid-template-columns: 80px auto;
        align-items: start;
        padding: 0.5em 0;
    }
    .time {
        font-weight: bold;
        text-align: right;
        padding-right: 1em;
    }
    .details {
        border-left: 2px solid var(--bs-primary-light);
        padding-left: 1em;
    }
    .arrow {
        width: 0;
        height: 0;
        border-left: 20px solid transparent;
        border-right: 20px solid transparent;
        border-top: 20px solid var(--bs-primary-light);
        margin: 1em 0;
    }
    .footnote {
        font-style: italic;
        margin-top: 1em;
        color: #666;
    }

    @media (max-width: $small-screen) {
        .time-slot {
            grid-template-columns: 1fr;
        }
        .time {
            text-align: left;
            padding-right: 0;
        }
        .details {
            border-left: none;
            padding-left: 0;
            margin-top: 0.5em;
        }
    }
</style>
