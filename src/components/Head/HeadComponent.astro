---
// HeadComponent.astro
import SeoMetaTags from './SeoMetaTags.astro';
import VercelTracker from './Analytics/VercelTracker.astro';
import GoogleTagmanager from './Analytics/GoogleTagmanager.astro';
import MetaPixel from './Analytics/MetaPixel.astro';

const { title, description } = Astro.props;
const defaultCanonical = Astro.url.href;
const defaultDescription =
    "Explore OneLife Japan's rural hiking, biking, and walking tours across Japan. Discover off-the-beaten-path adventures.";
---

<meta charset="UTF-8" />
<GoogleTagmanager />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>{title}</title>
<meta name="description" content={description || defaultDescription} />

<SeoMetaTags title={title} description={description} />

<!-- Favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />

<link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
/>
<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="canonical" href={defaultCanonical} />
<VercelTracker />
<slot name="head" />

<script src="/js/toggle-elements.js" defer></script>

<MetaPixel />
