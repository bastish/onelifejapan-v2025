    <style lang="scss">
        @use '../../../styles/global' as *;
        .faq-section {
            text-align: left;
            //border: 1px solid red;
        }
        details {
            margin-bottom: 30px;
        }
        span.description {
            display: block;
            padding-left: 20px;
            color: var(--text-dark);
            font-weight: normal;
            font-size: 1em;
        }
        summary h3 {
            cursor: pointer;
            font-size: 1em;
            font-weight: 600;
            margin-bottom: 0; /* Remove bottom margin */
            display: inline; /* Makes the h3 inline */
            margin-right: 10px; /* Optional: Adds space between h3 and the description */
        }

        .landing-faqs {
            margin-top: 2rem;

            details {
                margin-bottom: 1rem;
                border: 1px solid var(--bs-primary-dark);
                padding: 1rem;
                border-radius: 6px;
                background: #f9f9f9;
            }

            summary {
                cursor: pointer;
                font-weight: 600;
                margin-bottom: 0.5rem;
                display: inline-flex; /* Makes summary inline with its content */
                align-items: center; /* Vertically align content in the middle */
                padding-left: 0; /* Remove default padding that creates space for the triangle */
                list-style: none; /* Removes the default triangle icon */
            }

            summary .description {
                font-weight: normal; /* Adjust description font weight */
            }

            &.static details[open] summary {
                cursor: default;
                font-size: 1.1rem;
                margin-bottom: 0.5rem;
            }

            &.static summary::marker {
                display: none;
            }

            &.static summary span {
                font-weight: bold;
                display: inline;
                margin-bottom: 0.5rem;
            }

            p {
                margin: 0.5rem 0;
            }
        }

        summary {
            //border-top: 1px solid var(--bs-primary-dark);
            padding-top: 5px;
            margin-bottom: 10px;
            font-size: 1.3em;
            color: var(--bs-primary-dark);
            font-weight: 600;
            //color: var(--bs-link-color);
        }
        summary h3 {
            cursor: pointer;
            //color: var(--bs-link-color);
            text-decoration: underline;
            text-underline-offset: 5px;
        }
        summary:hover,
        summary h3:hover {
            color: var(--bs-link-color);
        }
        :global(.answer) {
            margin-top: 20px;
            padding-left: 20px;
            font-size: 1em;
        }
        :global(.answer strong) {
            color: var(--bs-primary-ultradark) !important;
            font-size: 1.1em;
        }

        ul.checklist {
            padding-top: 5px;
        }
        .checklist li {
            font-size: 1.2em;
            font-weight: normal !important;
            padding-bottom: 5px;
        }
        .checklist li strong {
            color: var(--bs-primary-ultradark) !important;
            font-size: 1em;
        }
    </style>
</div>
