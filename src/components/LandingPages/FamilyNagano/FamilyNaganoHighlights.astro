    .attention-catcher {
        padding-top: 20px;
        padding-bottom: 30px;
        overflow: hidden;
        position: relative;
    }
    .attention-catcher h2,
    h4 {
        // opacity: 0;
        // animation: fadeIn 4s forwards;
        animation-timing-function: ease-out;
        position: relative;
        font-weight: 600;
        //font-size: 1.2em;
    }
    .attention-catcher h1 {
        font-size: 2.3em;
        font-weight: 700;
        margin: 0; /* Prevent margin */
    }
    section h2 {
        padding-top: 20px !important;
        padding-bottom: 10px !important;
        font-size: 2.7em;
        text-align: center;
    }
    .attention-catcher h2 {
        font-size: 1.5em;
        margin: 10px 0 0; /* Add a bit of space between h1 and h2 */
    }
    // .attention-catcher h2 {
    //     font-size: 1.7em;
