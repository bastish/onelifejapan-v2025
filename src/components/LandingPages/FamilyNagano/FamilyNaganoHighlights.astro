        }
    }
    section p {
        @include respond-to(small) {
            margin-left: 5px;
        }
    }
    section ul.checklist li {
        margin-top: 10px;
        @include respond-to(small) {
            margin-left: 5px;
        }
    }
    .sub-header {
        max-width: 1000px;
        margin: 0 auto;
        margin-bottom: 20px;
    }
    .centered-section {
        max-width: 800px;
        margin: 0 auto;
        text-align: left;
    }
    hr {
        margin: 50px 0;
