    //     font-size: 1em;
    // }
    @keyframes fadeIn {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @include respond-to(xxlarge) {
    }

    @include respond-to(xlarge) {
    }

    @include respond-to(large) {
        .attention-catcher {
            padding-top: 0px;
            padding-bottom: 20px;
        }
    }

    @include respond-to(medium) {
        .btn-container {
            justify-content: center !important; /* Center the button */
            margin-top: 5px; /* Add some space above the button */
        }

        .container .row {
            flex-direction: column; /* Stack the elements vertically */
            align-items: center; /* Center align the children */
        }

        .container .col-md-3 {
            width: 100%; /* Full width on smaller screens */
            display: flex;
            justify-content: center;
            margin-bottom: 1em;
        }

        h1 {
            text-align: center;
        }
    }
    .centered {
        text-align: center;
    }

    /* Landing Page Container */
    .landing-container {
        display: flex;
        justify-content: center;
        align-items: flex-start; /* Align items to the top */
        flex-direction: column;
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto; /* Center the container horizontally */
    }
    .landing-routes {
        width: 100%;
        align-items: center;
    }
    /* Custom Container for Simple Page Body */
    .custom-container {
        width: 100%;
        margin-top: 20px;
    }

    :global(.cta-container) {
        width: 100%;
        text-align: center;
        padding: 20px;
        margin-top: 20px;
    }
    /* CTA Button */
    :global(.cta-button) {
        display: inline-block;
        padding: 1.5rem 1.5rem;
        background-color: var(--bs-link-color);
        color: white !important;
        font-weight: 600;
        font-size: 1.3em;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        text-align: center;
        transition: background 0.2s ease;
        margin: auto;
        &:hover {
            background-color: var(--bs-primary);
        }
    }

    /* Responsive Layout */
    @media (max-width: 1200px) {
        .landing-page-cards {
            grid-template-columns: repeat(2, 1fr); /* 2 columns on medium screens */
            gap: 20px;
        }
    }

    @media (max-width: 768px) {
        .landing-page-cards {
            grid-template-columns: 1fr; /* 1 column on smaller screens */
            gap: 15px;
        }
    }
    .circle-img {
        width: 280px;
        height: 280px;
        object-fit: cover;
        object-position: center 0%; // <-- move image down to center your face
        border-radius: 50%;
        margin-bottom: 1rem;
        border: 3px solid #ccc;
    }
    .circle-img-2 {
        //object-position: left center 100%; // <-- move image down to center your face
        //object-position: right 50%;
        border-radius: 50%;
        margin-bottom: 1rem;
        //    border: 3px solid red;
    }

    .checklist {
        margin-top: 20px;
        font-size: 1.1em;
        list-style: none;
        padding: 10px !important;
        max-width: 95%;
        margin-left: auto;
        margin-right: auto;
        border: 2px solid var(--bs-primary-light);
        border-radius: 8px;
        background: rgba(189, 208, 159, 0.08); // or a themed light color
        @include respond-to(medium) {
            // margin-left: 0px;
            // margin-right: 0px;
            padding: 5px !important;
            max-width: 100%;
        }
    }

    .checklist li::before {
        margin-right: 0.5em;
    }

    @media (min-width: 768px) {
        .checklist {
            columns: 2;
            column-gap: 2rem;
        }
    }

    .highlight-list {
        margin-top: 20px;
        font-size: 1.1em;
        margin-left: 0px;
    }
    //                 small: 480px,
    //   medium: 768px,
    //   large: 1024px
    h4 {
        margin-top: 20px;
        font-size: 1.7em;
        width: 100%;
