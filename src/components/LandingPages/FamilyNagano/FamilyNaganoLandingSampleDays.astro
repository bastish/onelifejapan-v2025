---
import { baseHost } from '../../../utils/utilities.ts';

// imagePosition (background-position) guide:
// - First value = horizontal alignment
//   * left, center, or right
// - Second value = vertical alignment
//   * top, center, bottom
//   * OR a percentage from the top
//     - 0% = top of the image
//     - 50% = center of the image
//     - 100% = bottom of the image
//     - 20% = 20% down from the top
// Examples:
//   'center 20%' → centered horizontally, focus 20% down from top
//   'bottom 20%' → align right at bottom, but move 20% down from top (NOT 20% up from bottom)

const days = [
    {
        day: 'Day 1',
        title: 'Explore historic temples and craft your own soba noodles.',
        image: '/assets/img/2024/media/photos/1596/planting-rice_3658443428_o_large.jpg',
        imagePosition: 'center 20%',
        imageSize: '100%',
        checklist: [
            'Warm-up ride through peaceful farm villages and rice fields.',
            'Visit Iiyama’s tranquil temples and traditional Butsudan craft street.',
            'Try your hand at making soba noodles with a local soba master.',
            'Soak in an outdoor hot spring bath with sweeping mountain views.',
            'Relax at a small farmhouse inn and experience genuine countryside hospitality.',
        ],
    },
    {
        day: 'Day 2',
        title: 'Monkeys, mountains, and a hidden onsen village.',
        image: '/assets/img/2024/media/photos/1163/DSC_0115_copy_large.jpg',
        imagePosition: 'center 60%',
        imageSize: '110%',
        checklist: [
            'Ride through forested hills toward Jigokudani Monkey Park.',
            'Visit the famous snow monkeys soaking in natural hot springs.',
            'Make traditional washi paper at a local countryside workshop (when available).',
            'Stroll through the historic streets of Nozawa Onsen village in yukata.',
            'Enjoy a traditional kaiseki-style dinner at a family-run ryokan.',
        ],
    },
    {
        day: 'Day 3',
        title: 'One more ride, and a glimpse of daily life in rural Japan.',
        image: '/assets/img/2024/media/photos/2648/Screenshot_2025-04-26_at_22.57.24_large.png',
        imagePosition: 'center 50%',
        imageSize: '100%',
        checklist: [
            'Leisurely ride along lake shores and forested backroads.',
            'Explore a typical Japanese supermarket with local guidance.',
            'Pick up ingredients for your own Japanese-style BBQ dinner.',
            'Relax at a cozy countryside inn surrounded by rice fields and mountains.',
            'Farewell ride and transport back to the station (or next destination).',
        ],
    },
    {
        day: 'Day 3',
        title: 'One more ride, and a glimpse of daily life in rural Japan.',
        image: '/assets/img/2024/media/photos/2648/Screenshot_2025-04-26_at_22.57.24_large.png',
        imagePosition: 'center 50%',
        imageSize: '100%',
        checklist: [
            'Leisurely ride along lake shores and forested backroads.',
            'Explore a typical Japanese supermarket with local guidance.',
            'Pick up ingredients for your own Japanese-style BBQ dinner.',
            'Relax at a cozy countryside inn surrounded by rice fields and mountains.',
            'Farewell ride and transport back to the station (or next destination).',
        ],
    },
];
---

<div class="day-cards-container">
    {
        days.map((day) => (
            <div class="day-card">
                <div
                    class="day-card-image"
                    style={`background-image: url(${baseHost + day.image}); background-position: ${day.imagePosition}; background-size: ${day.imageSize};`}
                />
                <div class="day-card-header">
                    <h3>{day.day}</h3>
                    <p class="day-card-title">{day.title}</p>
                </div>
                <ul class="day-card-checklist">
                    {day.checklist.map((item) => (
                        <li>{item}</li>
                    ))}
                </ul>
            </div>
        ))
    }
</div>

<style lang="scss">
    @use '../../../styles/global' as *;

    .day-cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 2rem;
        padding: 0 0rem;
    }

    .day-card {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        text-align: left;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease;

        &:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
        }
    }

    .day-card-image {
        width: 100%;
        height: 200px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        background-color: #f8f8f8;
        transition:
            background-position 0.3s ease,
            background-size 0.3s ease;
    }

    .day-card-header {
        padding: 1rem;
    }

    .day-card-header h3 {
        margin: 0;
        font-size: 1.3rem;
        color: var(--bs-primary-dark);
    }

    .day-card-title {
        margin-top: 8px;
        color: var(--text-dark);
        font-size: 1rem;
        font-weight: 500;
    }

    .day-card-checklist {
        padding: 0 1rem 1rem;
        list-style: disc;
        padding-left: 1.5rem;
    }

    .day-card-checklist li {
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }
</style>
